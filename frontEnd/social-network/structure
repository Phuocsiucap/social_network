bash# Create project with Vite
npm create vite@latest social-network -- --template react
cd social-network

# Core Dependencies
npm install react-router-dom
npm install @tanstack/react-query
npm install zustand
npm install react-hook-form
npm install zod

# UI & Styling
npm install tailwindcss postcss autoprefixer
