npm install framer-motion
npm install react-hot-toast

# Utilities
npm install date-fns
npm install clsx
npm install axios

# Development
npm install -D @tailwindcss/forms
npm install -D @tailwindcss/typography
npm install -D eslint-plugin-react-hooks
